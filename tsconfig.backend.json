{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "outDir": "node_dist",
        "baseUrl": "./src",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "types": ["express-session"]
    },
    "include": ["./src/backend", "./src/mock-server", "./src/mock-server/**/*.json"],
    "exclude": ["./src/frontend"],
    "lib": ["es2015", "esnext"]
  }